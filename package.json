{
  "name": "aviation-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo for aviation-related applications and SDKs",
  "workspaces": [
    "packages/*",
    "apps/*",
    "apps/aviation-accident-tracker/backend",
    "apps/aviation-accident-tracker/frontend"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "secrets:migrate": "ts-node scripts/migrate-secrets.ts",
    "keystore": "ts-node scripts/keystore-cli.ts",
    "keystore:list": "ts-node scripts/keystore-cli.ts services"
  },
  "keywords": [
    "aviation",
    "monorepo"
  ],
  "author": "Jordan Hubbard",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "overrides": {
    "diff": "^8.0.3"
  }
}
