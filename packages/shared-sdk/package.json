{
  "name": "@aviation/shared-sdk",
  "version": "0.2.0",
  "description": "Shared SDK for aviation applications with weather services, AI methodology, and common utilities",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "aviation",
    "sdk",
    "ai",
    "weather",
    "metar",
    "flight-planning"
  ],
  "author": "Jordan Hubbard",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.0.8",
    "jsdom": "^23.0.1",
    "typescript": "^5.0.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
